<h1>Homepage test</h1>

<div x-data="{ count: 0 }">
  <button @click="count++">Click me</button>
  <span>Count: <span x-text="count"></span></span>
</div>

<div x-data="{ isOpen: true }" style="border: 1px solid #ccc; padding: 1rem;">
  {% macro menuItemOpenAll(name, item, step) %}
    <div>
      <div><strong>{{ name }}</strong></div>
      {% if item.isFolder %}
        <div style="margin-left: 1rem;">
          {% for childName, child in item %}
            {% if childName not in ["isNote", "isFolder", "hide", "permalink", "name", "noteIcon", "pinned"] %}
              {{ menuItemOpenAll(childName, child, step + 1) }}
            {% endif %}
          {% endfor %}
        </div>
      {% elif item.isNote %}
        <div style="margin-left: 1rem;">
          <a href="{{ item.permalink }}">{{ item.name }}</a>
        </div>
      {% endif %}
    </div>
  {% endmacro %}

  {{ menuItemOpenAll("Orneu", fileTreeData.Orneu, 0) }}
</div>
