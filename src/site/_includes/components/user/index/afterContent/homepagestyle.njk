{% from "components/filetree.njk" import menuItem %}

<div x-data>
  <div class="filetree-multicolumn">
    {% for key, node in filetree.Orneu %}
      {{ menuItem(key, node, 0, key) }}
    {% endfor %}
  </div>
</div>

<style>
  /* Multi-column container: 3 columns with gap */
  .filetree-multicolumn {
    max-width: 1200px;
    margin: 0 auto;
    columns: 3;
    column-gap: 2rem;
  }

  /* Basic spacing for folder and note items */
  .folder.inner-folder {
    margin-bottom: 0.25rem;
  }

  .notelink {
    margin-left: 1.5rem;
    margin-bottom: 0.25rem;
  }

  /* Keep link styling clean */
  .notelink a.filename {
    text-decoration: none;
    color: inherit;
  }
  
  /* Chevron icons alignment */
  .foldername-wrapper {
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
</style>
